@model Category
@{
    ViewData["Title"] = "Update";
}
<partial name='_Notification' />
<h1>Delete Category</h1>
<form method='POST' asp-action= "Delete">
    <input asp-for = 'category_id' hidden />
<label asp-for = 'category_name'></label>
<input asp-for = 'category_name' readonly />
<label asp-for = 'createdAt'></label>
<input asp-for = 'createdAt' readonly/>
<p>Are you sure you want to delete this category?</p>

<div class= 'btn-group'>
    <button class = 'btn btn-primary'>Delete</button>
    <a asp-controller='Category' asp-action='Index' class = 'btn btn-secondary'>Go Back</a>
</div>
</form>